    <style>
        /* blogView.css */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            box-sizing: border-box;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        img {
            max-width: 100%;
            height: auto;
            border-radius: 10px 10px 0 0;
        }

        h2 {
            font-size: 28px;
            margin-top: 20px;
        }

        p {
            font-size: 16px;
            color: #555;
            margin-top: 10px;
        }

        .blog-content {
            font-size: 18px;
            line-height: 1.6;
            margin-top: 20px;
        }

        .button {
            background-color:#000000 ;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            margin-top: 10px;
            display: inline-block;
            cursor: pointer;
        }

        /* Footer styling */
        footer {
            text-align: center;
            margin-top: 40px;
            padding: 10px 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <img src="<%= blog.image %>" alt="<%= blog.name %>">
        <h2><%= blog.name %></h2>
        <p><%= blog.blogDescription %></p>
        <div class="blog-content">
            <%= blog.blogContent %>
        </div>
       
    </div>
    <footer>
        <a href="/blog" class="button" >Go Back</a>
    </footer>
</body>
</html>
 