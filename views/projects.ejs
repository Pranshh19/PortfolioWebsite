<!-- Include your header and other common components -->

<link rel="stylesheet" href="css/project.css">

<div class="projects-container">
    <h2>Projects</h2>

    <!-- Form for adding projects -->
    <form action="/add-project" method="post" class="add-project-form">
        <input type="text" name="projectName" placeholder="Project Name" required>
        <input type="text" name="projectDescription" placeholder="Project Description" required>
        <input type="text" name="websiteLink" placeholder="Website Link" required>
        <button type="submit">Add Project</button>
    </form>

    <!-- Display existing projects -->
    <div class="project-list">
        <% projects.forEach(project => { %>
            <div class="project-card">
                <h3><%= project.projectName %></h3>
                <p><%= project.projectDescription %></p>
                <a href="<%= project.websiteLink %>" target="_blank">Visit Website</a>
                <!-- Add buttons for "Show Project" and "Show Source Code" -->
            </div>
        <% }); %>
    </div>
</div>

