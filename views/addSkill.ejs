<!-- addSkill.ejs -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer">
        <title>Skills</title>
        <style>
            /* Style for the skills container */
.skills {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    max-width: 1000px;
    margin: 0 auto;
    padding: 20px; /* Added padding */
    text-align: center; /* Added text-align */
  }
  
  /* Style for each skill card */
  .each {
    background-color: #fff;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    overflow: hidden;
  }
  
  .box {
    padding: 20px;
  }
  
  .content {
    padding: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .content i {
    font-size: 40px;
    color: #3754aa;
    margin-bottom: 10px;
  }
  
  .content h2 {
    font-size: 20px;
    margin: 0;
  }
  
  .delete-button {
    background-color: #ff5252;
    color: #fff;
    border: none;
    border-radius: 5px;
    padding: 5px 10px;
    font-size: 14px;
    cursor: pointer;
    transition: background-color 0.2s ease-in-out;
    margin-top: 10px;
  }
  
  .delete-button:hover {
    background-color: #ff4040;
  }
  
  /* Style for the add skill form */
  .add-skill-form {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 20px;
  }
  
  .add-skill-form input {
    padding: 10px;
    margin: 5px;
    width: 100%;
    max-width: 400px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }
  
  .add-skill-form button {
    padding: 10px 20px;
    background-color: #333;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    align-self: center;
  }
  
        </style>
    </head>
<body>
    <div class="container">
        <div class="add-skill-form">
            <h2>Add Skill</h2>
            <form action="/add-skill" method="POST">
                <input type="text" name="name" placeholder="Skill Name" required>
                <input type="text" name="icon" placeholder="Skill Icon (FontAwesome Class)" required>
                <button type="submit" style="align-items:center">Add Skill</button>
            </form>
        </div>
    </div>
</body>
</html>
